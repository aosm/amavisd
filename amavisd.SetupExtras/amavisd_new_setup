#!/bin/sh
#
# Configure Amavisd-new

# Create amavisd.log
AMAVIS_LOG="/var/log/amavis.log"
if [ ! -e $AMAVIS_LOG ]; then
	touch $AMAVIS_LOG
fi
chmod 640 $AMAVIS_LOG
chown _amavisd:admin $AMAVIS_LOG

AMAVISD_DIR=/var/amavis
if [ ! -d $AMAVISD_DIR ]; then
	mkdir $AMAVISD_DIR
fi
chown -R _amavisd:_amavisd $AMAVISD_DIR

AMAVISD_SA_DIR="/var/amavis/.spamassassin"
if [ ! -d $AMAVISD_SA_DIR ]; then
	mkdir $AMAVISD_SA_DIR
fi
chown -R _amavisd:_amavisd $AMAVISD_SA_DIR

